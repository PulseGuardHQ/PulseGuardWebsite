RewriteEngine On

# Redirect all traffic to pulseguard.pro
RewriteCond %{HTTP_HOST} !^pulseguard\.pro$ [NC]
RewriteCond %{HTTP_HOST} !^www\.pulseguard\.pro$ [NC]
RewriteRule ^(.*)$ https://pulseguard.pro/$1 [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://pulseguard.pro/$1 [R=301,L]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.pulseguard\.pro$ [NC]
RewriteRule ^(.*)$ https://pulseguard.pro/$1 [R=301,L]

# Handle existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect everything else to pulseguard.pro
RewriteRule ^(.*)$ https://pulseguard.pro/$1 [R=301,L]
